<%= turbo_frame_tag dom_id(todo) do %>
  <li class="todo-list__todo">
    <%= form_with model: todo, url: toggle_todo_path(todo), method: :post do |form| %>
      <%= form.check_box :completed, data: { controller: "checkbox", action: "checkbox#submit" } %>

      <span class="todo-list__todo-name">
        <%= todo.name %>
      </span>
    <% end %>

    <% unless todo.completed? %>
      <span class="todo-list__todo-controls">
        <%= link_to "Edit", edit_todo_path(todo), class: "link", remote: true %> /
        <%= button_to "Delete", todo_path(todo), method: :delete, form_class: :link, data: { controller: "confirm", action: "confirm#confirm", confirm_message_value: "Are you sure?" } %>
      </span>
    <% end %>
  </li>
<% end %>
