<li id="<%= dom_id(todo) %>" class="todo-list__todo">
  <%= form_with model: todo, local: false, class: "form" do |form| %>
    <div class="form__field">
      <%= form.text_field :name, class: "form__input", autocomplete: :off %>
    </div>

    <%= form.submit "Save", class: "button button--primary" %>
    <%= link_to "Cancel", todo_path(todo), class: "button link", remote: true %>
  <% end %>
</li>
