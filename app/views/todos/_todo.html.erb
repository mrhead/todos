<li id="<%= dom_id(todo) %>" class="todo">
  <%= check_box_tag dom_id(todo, "checkbox"), 1, todo.completed?, data: { remote: true, url: toggle_todo_path(todo), method: :post } %>
  <%= todo.name %>

  <% unless todo.completed? %>
    <span class="controls float-right">
      <%= link_to "Edit", edit_todo_path(todo), remote: true %> /
      <%= link_to "Delete", todo_path(todo), remote: true, method: :delete, data: { confirm: "Are you sure?" } %>
    </span>
  <% end %>
</li>
